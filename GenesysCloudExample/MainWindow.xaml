<Window x:Class="GenesysCloudExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenesysCloudExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="-8.51,-8.292" Click="Login_Click" Height="36" Width="128" FontSize="16"/>
        <TextBox x:Name="textBoxOutput" Margin="10,80,10,10" TextWrapping="Wrap"/>
        <Button x:Name="btnCall" Content="Call" HorizontalAlignment="Left" Margin="143,25,0,0" VerticalAlignment="Top" Height="36" Width="125" FontSize="16" Click="Call_Click" IsEnabled="False"/>
        <Button x:Name="btnDisconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="273,25,0,0" VerticalAlignment="Top" Height="36" Width="125" FontSize="16" Click="Disconnect_Click" IsEnabled="False"/>
        <Label x:Name="lblStatus" Content="Status" HorizontalAlignment="Left" Margin="689,30,0,0" VerticalAlignment="Top" RenderTransformOrigin="4.681,0.37"/>
    </Grid>
</Window>
